<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appointment_bottom_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/corn_s"
    android:backgroundTint="@color/md_theme_secondaryContainer"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingTop="16dp"
    android:paddingEnd="18dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appointment_bottom_item_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/corn_l"
            android:backgroundTint="@color/md_theme_onSurfaceVariant"
            android:gravity="center"
            android:maxLength="1"
            android:text="李四"
            android:textColor="@color/md_theme_onPrimary"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/appointment_bottom_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:text="李四"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/appointment_bottom_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:text="--骨科专家"
                    android:textColor="@color/md_theme_tertiary"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/appointment_bottom_item_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="德州大学西南医学中心临床教授主治医师、德州大学西南医学中心住院医师、Iowa State University 营养学博士，癌症预防专家、中国医科大学全科，妇产科研究生毕业"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appointment_bottom_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="余量：20"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textSize="18sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/appointment_bottom_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="价格：40元"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>