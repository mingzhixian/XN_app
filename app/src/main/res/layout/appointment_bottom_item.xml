<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appointment_bottom_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corn_s"
    android:backgroundTint="@color/md_theme_secondaryContainer"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingTop="16dp"
    android:paddingEnd="18dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appointment_bottom_item_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/corn_l"
            android:backgroundTint="@color/md_theme_onSurfaceVariant"
            android:gravity="center"
            android:maxLines="1"
            android:text="李"
            android:textColor="@color/md_theme_onPrimary"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appointment_bottom_item_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="测试"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/appointment_bottom_item_introduce"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:maxLines="1"
                android:text="测试"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>