<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/corn_s"
    android:backgroundTint="@color/cardBackground"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="14dp"
    android:paddingEnd="16dp"
    android:paddingBottom="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/order_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="李四"
                android:textColor="@color/onCardBackground"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/order_list_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingStart="12dp"
                android:text="6月12日"
                android:textColor="@color/onCardBackgroundSecond"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/order_list_item_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingStart="12dp"
                android:text="医生：刘剑(骨科专家)"
                android:textColor="@color/onCardBackgroundSecond"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/order_list_item_status"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/order_doing" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:id="@+id/order_list_item_status_list"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_list_item_status_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corn_s"
                    android:backgroundTint="@color/cardContainerBackground"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="挂号"
                    android:textColor="@color/onCardContainerBackground"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/order_next"
                    app:tint="@color/onCardBackgroundSecond" />

                <TextView
                    android:id="@+id/order_list_item_status_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corn_s"
                    android:backgroundTint="@color/cardContainerBackground"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="缴费"
                    android:textColor="@color/onCardContainerBackground"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/order_next"
                    app:tint="@color/onCardBackgroundSecond" />

                <TextView
                    android:id="@+id/order_list_item_status_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corn_s"
                    android:backgroundTint="@color/cardContainerBackground"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="等待就诊"
                    android:textColor="@color/onCardContainerBackground"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/order_next"
                    app:tint="@color/onCardBackgroundSecond" />

                <TextView
                    android:id="@+id/order_list_item_status_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corn_s"
                    android:backgroundTint="@color/cardContainerBackground"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="就诊"
                    android:textColor="@color/onCardContainerBackground"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/order_next"
                    app:tint="@color/onCardBackgroundSecond" />

                <TextView
                    android:id="@+id/order_list_item_status_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corn_s"
                    android:backgroundTint="@color/cardContainerBackground"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="完成"
                    android:textColor="@color/onCardContainerBackground"
                    android:textSize="14sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/order_list_item_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/corn_s"
            android:backgroundTint="@color/buttonColor"
            android:text="取消"
            android:textColor="@color/onButtonColor"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>